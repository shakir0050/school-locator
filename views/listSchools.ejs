<!DOCTYPE html>
<html>
<head>
  <title>Nearby Schools</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Nearby Schools</h1>
    <form method="GET" action="/listSchools">
      <label for="userLat">Your Latitude:</label>
      <input type="number" id="userLat" name="latitude" step="any" required>
      
      <label for="userLng">Your Longitude:</label>
      <input type="number" id="userLng" name="longitude" step="any" required>

      <button type="submit">Find Schools</button>
    </form>

    <% if (schools && schools.length > 0) { %>
      <ul style="font-family: Arial, sans-serif; font-size: 16px; padding: 50px; padding-top: 20px; ">
        <% schools.forEach(function(school) { %>
          <li>
            <strong style="font-weight: bold; padding-top: 20px; " ><%= school.name %></strong> - <%= school.address %><br>
            Distance: <%= school.distance.toFixed(2) %> km
          </li>
        <% }) %>
      </ul>
    <% } else if (schools) { %>
      <p>No schools found nearby.</p>
    <% } %>
  </div>
</body>
</html>
